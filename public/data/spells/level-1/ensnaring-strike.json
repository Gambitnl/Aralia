{
  "id": "ensnaring-strike",
  "name": "Ensnaring Strike",
  "level": 1,
  "school": "Conjuration",
  "classes": [
    "Ranger"
  ],
  "description": "After you hit a creature with a weapon, it makes a Strength saving throw (Large or larger has Advantage). On a failed save, the target is Restrained by magical vines. While Restrained, it takes 1d6 Piercing damage at the start of each of its turns. A creature can use an action to make a Strength (Athletics) check against your spell save DC, ending the effect on a success.",
  "higherLevels": "The start-of-turn damage increases by 1d6 for each spell slot level above 1.",
  "tags": [
    "control",
    "conjuration",
    "concentration"
  ],
  "ritual": false,
  "castingTime": {
    "value": 1,
    "unit": "bonus_action",
    "combatCost": {
      "type": "bonus_action",
      "condition": "immediately after you hit a creature with a weapon"
    }
  },
  "range": {
    "type": "self"
  },
  "components": {
    "verbal": true,
    "somatic": false,
    "material": false
  },
  "duration": {
    "type": "timed",
    "value": 1,
    "unit": "minute",
    "concentration": true
  },
  "targeting": {
    "type": "single",
    "range": 5,
    "validTargets": [
      "creatures",
      "enemies"
    ],
    "lineOfSight": true
  },
  "effects": [
    {
      "type": "STATUS_CONDITION",
      "trigger": {
        "type": "immediate"
      },
      "condition": {
        "type": "save",
        "saveType": "Strength",
        "saveEffect": "negates_condition",
        "saveModifiers": [
          {
            "type": "advantage",
            "appliesTo": {
              "size": [
                "Large",
                "Huge",
                "Gargantuan"
              ]
            },
            "reason": "Large or larger creatures have advantage on the saving throw."
          }
        ]
      },
      "statusCondition": {
        "name": "Restrained",
        "duration": {
          "type": "minutes",
          "value": 1
        },
        "escapeCheck": {
          "ability": "Strength",
          "skill": "Athletics",
          "dc": "spell_save_dc",
          "actionCost": "action"
        },
        "repeatSave": {
          "timing": "on_action",
          "saveType": "strength_check",
          "successEnds": true,
          "useOriginalDC": true,
          "modifiers": {
            "sizeAdvantage": [
              "Large",
              "Huge",
              "Gargantuan"
            ]
          }
        }
      }
    },
    {
      "type": "DAMAGE",
      "trigger": {
        "type": "turn_start",
        "frequency": "every_time"
      },
      "condition": {
        "type": "always",
        "requiresStatus": [
          "Restrained"
        ]
      },
      "damage": {
        "dice": "1d6",
        "type": "Piercing"
      },
      "scaling": {
        "type": "slot_level",
        "bonusPerLevel": "+1d6"
      }
