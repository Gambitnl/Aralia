    "value": 1,
    "unit": "bonus_action",
    "combatCost": { "type": "bonus_action" }
  },
  "range": { "type": "self" },
  "components": { "verbal": true, "somatic": false, "material": false },
  "duration": { "type": "timed", "value": 1, "unit": "minute", "concentration": true },
  "targeting": { "type": "single", "range": 5, "validTargets": ["creatures", "enemies"], "lineOfSight": true },
  "effects": [
    {
      "type": "DAMAGE",
      "trigger": { "type": "immediate" },
