      "damage": { "dice": "1d6", "type": "Fire" },
      "scaling": { "type": "slot_level", "bonusPerLevel": "+1d6" }
    },
    {
      "type": "DAMAGE",
      "trigger": { "type": "turn_start", "frequency": "every_time" },
