{
  "permissions": {
    "allow": [
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(powershell:*)",
      "Bash(cargo:*)",
      "Bash(codexbar-cli:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(dir:*)",
      "Bash(mkdir:*)",
      "Bash(echo:*)",
      "Bash(curl:*)",
      "Bash(timeout:*)",
      "Bash(xargs:*)",
      "Bash(rev:*)",
      "Bash(findstr:*)",
      "Bash(tasklist:*)",
      "Bash(where:*)",
      "Bash(set:*)",
      "Bash(for:*)",
      "Bash(gh:*)",
      "Bash(pnpm:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/file-backup-hook.js",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-cleanup-hook.js"
          }
        ]
      }
    ]
  }
}
