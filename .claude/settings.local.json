{
  "permissions": {
    "allow": [
      "Bash(npm *:*)",
      "Bash(npx *:*)",
      "Bash(npm run *:*)",
      "Bash(git *:*)",
      "Bash(node *:*)",
      "Bash(python*:*)",
      "Bash(powershell*:*)",
      "Bash(cargo*:*)",
      "Bash(*codexbar-cli.exe*:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(dir*:*)",
      "Bash(mkdir:*)",
      "Bash(echo:*)",
      "Bash(curl:*)",
      "Bash(timeout*:*)",
      "Bash(xargs*:*)",
      "Bash(rev:*)",
      "Bash(findstr:*)",
      "Bash(tasklist:*)",
      "Bash(where:*)",
      "Bash(set:*)",
      "Bash(for:*)",
      "Bash(do)",
      "Bash(done)",
      "Bash(1)",
      "Bash(gh run list:*)",
      "Bash(pnpm*:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/file-backup-hook.js",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-cleanup-hook.js"
          }
        ]
      }
    ]
  }
}
